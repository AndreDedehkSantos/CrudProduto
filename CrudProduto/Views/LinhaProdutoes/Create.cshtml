@model CrudProduto.Models.ViewModels.LinhaProdutoViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Nova</h2>

<h4>Linha de Produtos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                *<label asp-for="linhaProduto.nome" class="control-label"></label>
                <input asp-for="linhaProduto.nome" class="form-control" />
                <span asp-validation-for="linhaProduto.nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                *<label class="control-label">Acessórios</label>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.acessorio.nome)
                            </th>
                            <th>
                                
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Acessorio item in (Model.acessorios))
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nome)
                                </td>
                                <td>
                                    <div class="checkbox">
                                        <label>
                                            Adicionar<input asp-for = "ativo"/>
                                            @if (Model.ativo)
                                            {
                                                Model.acessorios.Add(item);
                                            }
                                        </label>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}